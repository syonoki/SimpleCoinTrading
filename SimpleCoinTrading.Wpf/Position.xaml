<UserControl x:Class="SimpleCoinTrading.Wpf.Position"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SimpleCoinTrading.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <DataGrid ItemsSource="{Binding Positions}" Margin="4"  AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol" Binding="{ Binding Symbol}" Width="90" />
                <DataGridTextColumn Header="Amount"  Binding="{Binding NetQty}"/>
                <DataGridTextColumn Header="Entry Price" Binding="{Binding AvgPrice}" Width="90" />
                <DataGridTextColumn Header="Current Price" Binding="{Binding LastPrice}" Width="90"/>
                <DataGridTextColumn Header="Unrealized PnL" Binding="{Binding UnrealizedPnl}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
