<UserControl x:Class="SimpleCoinTrading.Wpf.Sample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SimpleCoinTrading.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Connect" Command="{Binding ConnectCommand}" Width="100" Margin="0,0,8,0"/>
            <Button Content="Disconnect" Command="{Binding DisconnectCommand}" Width="100" Margin="0,0,16,0"/>
            <TextBlock Text="Seq:" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Seq}" Margin="6,0,16,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
            <CheckBox x:Name="chkKillSwitch" Content="KillSwitch"
                      IsChecked="{Binding KillSwitchEnabled}"
                      IsEnabled="False"
                      Margin="12,0,0,0"/>
            <Button Content="Toggle"
                    Command="{Binding ToggleKillSwitchCommand}"
                    Width="80" Margin="8,0,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1">
            <TabItem Header="Orders">
                <DataGrid ItemsSource="{Binding Orders}" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Fills">
                <DataGrid ItemsSource="{Binding Fills}" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Positions">
                <DataGrid ItemsSource="{Binding Positions}" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
            <TabItem Header="Algorithms">
                <DataGrid ItemsSource="{Binding Algorithms}" AutoGenerateColumns="True" IsReadOnly="True"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
