<UserControl x:Class="SimpleCoinTrading.Wpf.Logs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SimpleCoinTrading.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DesignInstance="{d:DesignInstance local:LogViewModel}">
    <Grid>
        <DataGrid Margin="4" ItemsSource="{Binding Logs}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" 
                                    Binding="{Binding TimeUnixMs}" 
                                    Width="150"/>
                <DataGridTextColumn Header="Algo Id" 
                                    Binding="{Binding AlgorithmId}"
                                    Width="100"/>
                <DataGridTextColumn Header="Level" 
                                    Binding="{Binding Level}"
                                    Width="60"/>
                <DataGridTextColumn Header="Message" 
                                    Binding="{Binding Message}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
